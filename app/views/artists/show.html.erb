<div class="container" id="artist_title"><h1><%= @artist.name %></h1>

<p>Location: <%= @artist.location.city_state %></p>
<p>Bio: <%= @artist.bio %></p>
<hr class="pg_hr">
<h3>Artworks</h3>

<% @artist.artworks.each do |artwork|%>
    <div class="row">
        <div class="col s6 m4">
            <div class="card">
                <div class="card-image">
                    <%= link_to image_tag(artwork.img_url), artwork_path(artwork)%>
                    <span class="card-title"></span>
                </div>
                <div class="card-content">
                    <h5><%= artwork.name %></h5>
                </div>
                <div class="card-action">
                    <a><%= link_to "View Artwork", artwork_path(artwork) %></a>
                </div>
            </div>
        </div>
<% end%>
    </div>
</div>
<br>
<br>

