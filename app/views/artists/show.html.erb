<div class="container"><h1><%= @artist.name %></h1>

<p>Location: <%= @artist.location.city_state %></p>
<p>Bio: <%= @artist.bio %></p>

<h3>Artworks</h3>
<% @artist.artworks.each do |artwork|%>
    <div class="row" id="artwork_row">
    <div class="col s12 m5">
        <div class="card">
            <div class="card-image">
                <%= link_to image_tag(artwork.img_url), artwork_path(artwork)%>
                <span class="card-title"></span>
            </div>
            <div class="card-content">
                <h5><%= artwork.name %></h5>
            </div>
            <div class="card-action">
                <a><%= link_to "View Artwork", artwork_path(artwork) %></a>
            </div>
        </div>
    </div>
</div>
<% end%>
