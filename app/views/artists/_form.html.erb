<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
       <p style = 'color:red;'>  <%= error %>  </p>
    <% end%>
<% end%>

<%= form_for @artist do |f| %>
    <div class="input-field col s6">
        <%= f.label "Name: " %><br>
        <%= f.text_field :name %><br>
    </div>
    <div class="input-field col s6">
        <%= f.label "Location: " %><br>
        <%= f.collection_select(:location_id, Location.all, :id, :city_state) %><br>
    </div>
    <div class="input-field col s6">
        <%= f.label "Bio: " %><br>
        <%= f.text_area :bio %><br>
    </div>
    <%= f.submit %>
<% end%>