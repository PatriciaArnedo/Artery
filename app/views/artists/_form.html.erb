<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
       <p style = 'color:red;'>  <%= error %>  </p>
    <% end%>
<% end%>

<%= form_for @artist do |f| %>
    <div class="container">
        <div class="row">
            <div class="col s6 offset-s3 z-depth-3" id="panel">
            <h5 id="log_in">Create Artist</h5>
                <div id="name">
                    <%= f.label "Name: " %><br>
                    <%= f.text_field :name %><br>
                </div>
                <div class="input-field" id="location">
                    <%= f.label "Location: " %><br>
                    <%= f.collection_select(:location_id, Location.all, :id, :city_state, class: "browser-default") %><br>
                </div>
                <div id="bio">
                    <%= f.label "Bio: " %><br>
                    <%= f.text_area :bio %><br>
                </div>
                <a class="grey darken-1 waves-effect waves-light btn" id="registerbtn"><%= f.submit "Submit" %></a>
            </div>
        </div>
    </div>
<% end%>
    