<div class="container"><h1>Artist Directory</h1></div>

<div class="container">
<% @artists.shuffle.each do |artist| %>
    <div class="row">
    <div class="col s12 m5">
        <div class="card">
            <div class="card-image">
                <%= link_to image_tag(artist.artworks.sample.img_url), artist_path(artist) %>
                <span class="card-title"></span>
            </div>
            <div class="card-content">
                <h5><%= artist.name %></h5>
            </div>
            <div class="card-action">
                <a><%= link_to "View Artist Page", artist_path(artist) %></a>
            </div>
        </div>
    </div>


<% end%>
</div>
