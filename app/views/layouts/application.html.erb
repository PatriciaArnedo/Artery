<!DOCTYPE html>
<html>
  <head>
    <title>Artery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"> 
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@500&display=swap" rel="stylesheet">
    <%= favicon_link_tag asset_path('favicon.ico') %>
  </head>

  <body>
    <header>
      <div class="navbar-fixed">
        <nav class="nav-wrapper white black-text">
          <div>
            <a href="http://localhost:3000/" class="logo"><img src="https://i.imgur.com/7OqCCxU.png?2" alt="logo">
            <%= image_tag 'rsz_2artery_banner-01'%>
              
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><%= link_to "Artworks", artworks_path %></li>
              <li><%= link_to "Browse Artists By Location", locations_path %></li>
              <li><%= link_to "Artist Directory", artists_path %></li>
              <% if @current_user %>
                <li><%= link_to "My Cart", my_cart_path(@current_user) %></li>
                <li><%= link_to "My Account", users_path %></li>
                <li>Welcome <%= @current_user.username %>!</li>
                <li class="log_out"><%= link_to "Log Out", logout_path, method: :delete %></li>
              <% else %>
                <li class="login"><%= link_to "Login", new_sign_in_path %></li>
                <li class="signup"><%= link_to "Sign Up", new_user_path %></li>
                <li><%= link_to "Create an Artist Account", new_artist_path %></li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </header>
    <%= yield %>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
      $(document).ready(function(){
        $('.carousel').carousel();
      });
    </script>
    <script>
      $('.carousel.carousel-slider').carousel({
        fullWidth: true,
        indicators: true
      });
    </script>
  </body>
</html>
