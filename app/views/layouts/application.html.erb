<!DOCTYPE html>
<html>
  <head>
    <title>Artery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"> 
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper yellow darken-1">
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><%= link_to "Artists", artists_path %></li>
          <li><%= link_to "Create An Artist", new_artist_path %></li>

    <ul>
      <li><%= link_to "Artists", artists_path %></li>
      <li><%= link_to "Create An Artist", new_artist_path %></li>

      <% if @current_user %>
        <li class="right">Welcome <%= @current_user.username %>!</li>
        <li class="right"><%= link_to "Log Out", logout_path, method: :delete %></li>
      <% else %>
        <li class="right"><%= link_to "Login", new_sign_in_path %></li>
        <li class="right"><%= link_to "Sign Up", new_user_path %></li>
      <% end %>
    </ul>
    
    <%= yield %>
  </body>
</html>
