<% if flash[:errors] %>
    <% flash[:errors].each do |err| %>
        <p style = 'color:red;'><%= err %></p>
    <% end %>
<% end %>

<%= form_for(@user) do |f| %>
    <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>
    <div>
        <%= f.label :password %>
        <%= f.text_field :password %>
    </div>
    <div>
        <%= f.label :zip_code %>
        <%= f.number_field :zip_code %>
    </div><br>
    <%= f.submit %>
<% end %>
  