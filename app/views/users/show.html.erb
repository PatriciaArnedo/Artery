<div class="container" id="artwork_title"><h3>Artwork in my cart</h3><br>
<hr class="pg_hr">

<% if @user.carts ==[] %>
    <p><h5>Your cart is currently empty.</h5></p>
    <br><br><br>
<%else %>
<% @user.carts.each do |cart| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card medium">
        <div class="card-image">
          <%= link_to image_tag(cart.artwork.img_url), artwork_path(cart.artwork) %>
          <span class="card-title"></span>
        </div>
        <div class="card-content">
            <p><%= cart.artwork.name %> by <%= cart.artwork.artist.name %></p>
            <p>Medium: <%= cart.artwork.medium %></p>
            <p>Size: <%= cart.artwork.size %></p>
            <p>Price: $<%= cart.artwork.price %>0</p>
            <%= button_to "Remove from Cart", cart_path(cart), method: :delete %>
        </div>
      </div>
    </div>
  </div>
  <div>
  </div>
  
<%end %>
<% end%>

<h5>Cart Total: $<%= @user.cart_total %>.00</h5> 
<div class="container">
    <h5 class="cart_button"><%= button_to "Check Out" %></h5>
</div>

</div>


  

