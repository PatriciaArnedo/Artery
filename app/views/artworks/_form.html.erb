<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
       <p style = 'color:red;'>  <%= error %>  </p>
    <% end%>
<% end%>


<%= form_for @artwork do |f| %>
<div>
    <div class="input-field col s6">
        <%= f.label :name %><br>
        <%= f.text_field :name %><br>
    </div>
    <div class="input-field col s6">
        <%= f.label :medium %><br>
        <%= f.text_field :medium %><br>
    </div>
    <div class="input-field col s6">
        <%= f.label :size %><br>
        <%= f.text_field :size %><br>
    </div>
    <div class="input-field col s6">
        <%= f.label "Artist" %><br>
        <%= f.collection_select(:artist_id, Artist.all, :id, :name) %><br>
    </div>
    <%= f.submit %>
</div>
<% end%>