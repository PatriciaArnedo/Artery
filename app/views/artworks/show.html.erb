<div class="container">
<% if flash[:cart_error] %>
    <p style= color:red;><%= flash[:cart_error] %></p>
<% end%>
</div>
<div class="container" id="artwork_title"><h1><%= @artwork.name %></h1><div>


<div id="artwork_row">
    <div class="col s12 m7">
        <div class="card" id="showpg_card">
            <div class="card-image" id="card_show_page">
                <%= image_tag(@artwork.img_url) %>
                <span class="card-title"></span>
            </div>
            <div class="card-content">
                <p><%= @artwork.name %> by <%= @artwork.artist.name %></p>
                <p>Medium: <%= @artwork.medium %></p>
                <p>Size: <%= @artwork.size %></p>
                <p>Price: $<%= @artwork.price %>0</p>
            </div>
            <div class="card-action">
                <% if @current_user %>
                <div><%= link_to "Add to Cart", carts_path, method: :post %></div>
                <%else  %>
                <div><%= link_to "Login to add this to your cart!", '/sessions/new', method: :get %></div>
                <% end%>
            </div>
        </div>
    </div>
</div>


<br>

<p><%=link_to "Back to Artist Page", artist_path(@artwork.artist) %></p>
